{
  "name": "Bun",
  "image": "ghcr.io/nhaef/devcontainer-bun:latest",
  "postCreateCommand": "bun i",
  "customizations": {
    "jetbrains": {
      "settings": {
        "Git4Idea:app:Git-Application-Settings.use_credential_helper": true,
        "com.intellij:app:HttpConfigurable.use_proxy_pac": true,
        "com.intellij:app:EditorSettings.soft_wrap_file_masks": "*.md; *.txt; *.rst; *.adoc; *.mdx",
        "com.intellij:app:EmmetOptions.previewEnabled": true
      }
    }
  }
}